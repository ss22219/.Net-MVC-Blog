@model Blog.Model.Category
@using Blog.WebUI.Areas.Admin.Models;
@{
    ViewBag.Title = "编辑分类目录";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="wpbody-content" aria-label="主内容" tabindex="0">
    <div class="wrap">
        <div id="icon-edit" class="icon32 icon32-posts-post">
            <br>
        </div>
        <h2>编辑分类目录</h2>
        <div id="ajax-response"></div>
        <form name="edittag" id="edittag" method="post" class="validate">
            <input type="hidden" name="categoryId" value="@Model.CategoryId">
            <table class="form-table">
                <tbody>
                    <tr class="form-field form-required">
                        <th scope="row" valign="top">
                            <label for="name">名称</label></th>
                        <td>
                            <input name="name" id="name" type="text" value="@Model.Name" size="40" aria-required="true">
                            <p class="description">这将是它在站点上显示的名字。</p>
                        </td>
                    </tr>
                    <tr class="form-field">
                        <th scope="row" valign="top">
                            <label for="parent">父级</label></th>
                        <td>
                            <select name="parentId" id="parent" class="postform">
                                <option value="-1">无</option>
                                @if (Model.Parent != null)
                                {
                                    @Html.BulidCategoryList(null, Model.Parent.CategoryId)
                                }
                                else
                                {
                                    @Html.BulidCategoryList()
                                }
                            </select>
                            <p class="description">分类目录和标签不同，它可以有层级关系。您可以有一个“音乐”分类目录，在这个目录下可以有叫做“流行”和“古典”的子目录。</p>
                        </td>
                    </tr>
                </tbody>
            </table>
            <p class="submit">
                <input type="submit" name="submit" id="submit" class="button button-primary" value="更新">
            </p>
        </form>
    </div>
    <script type="text/javascript">
        try { document.forms.edittag.name.focus(); } catch (e) { }
    </script>

    <div class="clear"></div>
</div>
